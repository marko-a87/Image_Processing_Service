generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  username String @unique
  email    String @unique
  password String
  role     Role   @default(USER)

  refreshTokenHash String? // for refresh token rotation
  tokenVersion     Int       @default(0) // invalidate tokens globally
  failedLoginCount Int       @default(0)
  lockedUntil      DateTime?

  images Image[]
  tokens Token[]
}

model Image {
  id        Int      @id @default(autoincrement())
  publicId  String   @unique @default(uuid()) // Never expose the raw 'id' to the frontend
  createdAt DateTime @default(now())

  // Metadata
  img_name     String // The random name generated by Multer (e.g., image-123.jpg)
  originalName String? // The name the user actually uploaded (e.g., profile_pic.jpg)
  mimetype     String // image/jpeg, image/png, etc.
  size         Int // File size in bytes

  // Dimensions
  width  Int
  height Int

  // Storage
  path String @unique // Full path to the original "Master" file

  // Relationships
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // @@index([userId]) // Helps performance when fetching "My Images"
}

model Token {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  expiresAt DateTime
}

enum Role {
  USER
  ADMIN
}

enum ImageStatus {
  UPLOADED
  PROCESSING
  READY
  FAILED
}
